mixin sGal()
	// start sGal
	+b.SECTION.sGal.section.pt-0#sGal&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Фотогаллерея участков
				
			+e.slider-wrapper
				+e.slider--js.swiper-container
					.swiper-wrapper
						- for (var x = 0; x < 3; x++)
							+e.slide.swiper-slide(href="img/@2x/gal.jpg" data-fancybox="slGal")
								img.swiper-lazy.res-i(src="#" data-src="img/@2x/gal.jpg", alt="")
				+arrow()
	// end sGal